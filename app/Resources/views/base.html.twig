<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="css/bootstrap.min.css"/>

    <!-- Slick -->
    <link type="text/css" rel="stylesheet" href="{{ asset('css/slick.css') }}"/>
    <link type="text/css" rel="stylesheet" href="{{ asset('css/slick-theme.css') }}"/>

    <!-- nouislider -->
    <link type="text/css" rel="stylesheet" href="{{ asset('css/nouislider.min.css') }}"/>

    <!-- Font Awesome Icon -->
    <link type="text/css" rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}"/>

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="{{ asset('css/style.css') }}"/>



</head>
<body>



<!-- HEADER -->
<header>

    <!-- MAIN HEADER -->
    <div id="header">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- LOGO -->
                <div class="col-md-6">
                    <div class="header-logo">
                        <a href="/" class="logo">
                            <img src="./img/logo.png" alt="">
                        </a>
                    </div>
                </div>
                <!-- /LOGO -->

                {% block account %}
                <!-- ACCOUNT -->
                <div class="col-md-6 clearfix">
                    <div class="header-ctn">
                        <!-- Wishlist -->
                        <div>
                            <a href="{{ path('viewWishList') }}">
                                <i class="fa fa-heart-o"></i>
                                <span>Your Wishlist</span>
                                <div class="qty" id="wish_list_qty">{{ wish_list|length }}</div>
                            </a>
                        </div>
                        <!-- /Wishlist -->

                        <!-- Cart -->
                        {#{{ dump(cart) }}#}
                        <div class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                                <i class="fa fa-shopping-cart"></i>
                                <span>Your Cart</span>
                                <div class="qty">
                                    {% if (empty) %} {{ 0 }}
                                    {% else %} {{ cart_products|length }}
                                    {% endif %}
                                </div>
                            </a>

                            <div class="cart-dropdown">
                                <div class="cart-list">
                                    {% if (empty) %} Your cart is empty
                                    {% else %}
                                        {% for cart_item in cart_products %}
                                            <div class="product-widget">
                                                <div class="product-img">
                                                    <img src="./img/{% if cart_item['product_id'] == null %}{{ 'no-image.png' }}{% endif %}{{ cart_item['product_id'].image }}"
                                                         alt="">
                                                </div>
                                                <div class="product-body">
                                                    <h3 class="product-name"><a
                                                                href="#">{{ cart_item['product_id'].productName }}</a></h3>
                                                    <h4 class="product-price"><span
                                                                class="qty">{{ cart_item.quantity }}
                                                            x</span>${{ cart_item['product_id'].price }}</h4>
                                                </div>
                                                {#<button class="delete"><i class="fa fa-close"></i></button>#}
                                            </div>
                                        {% endfor %}
                                    {% endif %}
                                </div>
                                <div class="cart-summary">
                                    <small>{{ cart_products|length }} Item(s) selected</small>
                                    <h5>SUBTOTAL: ${% if (empty) %}{{ 0 }}{% else %}{{  cart_products[0]['cart_id'].totalPrice}}{% endif %}</h5>
                                </div>
                                <div class="cart-btns">
                                    <a href="{{ path('viewCart') }}">View Cart</a>
                                    {#<a href="#">Checkout <i class="fa fa-arrow-circle-right"></i></a>#}
                                </div>
                            </div>
                        </div>
                        <!-- /Cart -->

                        <!-- Menu Toogle -->
                        <div class="menu-toggle">
                            <a href="#">
                                <i class="fa fa-bars"></i>
                                <span>Menu</span>
                            </a>
                        </div>
                        <!-- /Menu Toogle -->
                    </div>
                </div>
                {% endblock account %}
                <!-- /ACCOUNT -->
            </div>
            <!-- row -->
        </div>
        <!-- container -->
    </div>
    <!-- /MAIN HEADER -->
</header>
<!-- /HEADER -->


<!-- NAVIGATION -->
<nav id="navigation">
    <!-- container -->
    <div class="container">
        <!-- responsive-nav -->
        <div id="responsive-nav">
            <!-- NAV -->
            <ul class="main-nav nav navbar-nav">
                <li><a href="/">Home</a></li>
                <li id="viewCart"><a href="/viewCart">Cart</a></li>
                <li id="viewWishList"><a href="/viewWishList">Wishlist</a></li>
                <li><a href="/add_product">Products</a></li>


            </ul>
            <!-- /NAV -->
        </div>
        <!-- /responsive-nav -->
    </div>
    <!-- /container -->
</nav>
<!-- /NAVIGATION -->

